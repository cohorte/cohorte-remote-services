<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.cohorte.remote</groupId>
    <artifactId>cohorte-remote-services</artifactId>
    <version>1.2.1</version>
    <packaging>pom</packaging>

    <modules>
        <module>../../org.cohorte.remote.api</module>
        <module>../../org.cohorte.remote.utilities</module>
        <module>../../org.cohorte.remote.core</module>        
        <module>../../cohorte-remote-package</module>
    </modules>

    <properties>
    	<tycho-version>1.0.0</tycho-version>
        <osgi-version>5.0.0</osgi-version>
        <ipojo-version>1.12.1</ipojo-version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
    	<plugins>	
    		<!-- iPOJO -->
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-ipojo-plugin</artifactId>
			</plugin>
			<!-- tycho : maven -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
			</plugin>
			<!-- tycho : target platform -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
			</plugin>

			<!-- tycho : generate sources jars -->
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-source-plugin</artifactId>
			</plugin>
			<plugin>
				<!-- Tycho: Tolerate version differences -->
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<strictVersions>false</strictVersions>
				</configuration>
			</plugin>			
		</plugins>
		<pluginManagement>
			<plugins>
				<!-- iPOJO manipulation -->
				<plugin>
					<groupId>org.apache.felix</groupId>
					<artifactId>maven-ipojo-plugin</artifactId>
					<version>${ipojo-version}</version>
					<configuration>
						<!-- Add support for Tycho packaging -->
						<m_supportedProjectTypes>
							<type>eclipse-plugin</type>
						</m_supportedProjectTypes>
					</configuration>
					<executions>
						<execution>
							<goals>
								<goal>ipojo-bundle</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
				<!-- tycho : maven -->
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-maven-plugin</artifactId>
					<version>${tycho-version}</version>
					<extensions>true</extensions>
				</plugin>
				<!-- tycho : target platform -->
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>target-platform-configuration</artifactId>
					<version>${tycho-version}</version>
					<configuration>
						<!-- consider bundles compiled with maven and available on local maven 
							repository. they will be added to the target platform used by tycho to compile 
							each project. @see http://wiki.eclipse.org/Tycho/Target_Platform -->
						<pomDependencies>consider</pomDependencies>
					</configuration>
				</plugin>
				<!-- tycho : generate sources jars -->
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-source-plugin</artifactId>
					<version>${tycho-version}</version>
					<executions>
						<execution>
							<id>plugin-source</id>
							<goals>
								<goal>plugin-source</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

				<!-- Add iPOJO annotations to class path ?? -->
				<plugin>
					<groupId>org.eclipse.tycho</groupId>
					<artifactId>tycho-compiler-plugin</artifactId>
					<version>${tycho-version}</version>
					<configuration>
						<source>1.6</source>
						<target>1.6</target>
						<extraClasspathElements>
							<!-- iPOJO Annotations are not in a bundle -->
							<extraClasspathElement>
								<groupId>org.apache.felix</groupId>
								<artifactId>org.apache.felix.ipojo.annotations</artifactId>
								<version>${ipojo-version}</version>
							</extraClasspathElement>
						</extraClasspathElements>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>		
	</build>

    <repositories>
    	<repository>
        	<id>felix-p2</id>
        	<url>http://nexus:8081/repository/felix-p2/5.4.0</url>
        	<layout>p2</layout>        
        </repository>		
        <repository>
            <id>cohorte.snapshots</id>
            <name>Cohorte Snapshot Repository</name>
            <url>http://nexus:8081/repository/cohorte-snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>cohorte.releases</id>
            <name>Cohorte Releases Repository</name>
            <url>http://nexus:8081/repository/cohorte-releases</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>cohorte-nexus</id>
            <name>Cohorte Releases Repository</name>
            <url>http://nexus:8081/repository/cohorte-releases/</url>
            <layout>default</layout>
        </repository>
        <snapshotRepository>
            <id>cohorte-nexus</id>
            <name>Cohorte Snapshots Repository</name>
            <url>http://nexus:8081/repository/cohorte-snapshots/</url>
            <uniqueVersion>true</uniqueVersion>
            <layout>default</layout>
        </snapshotRepository>
    </distributionManagement>

</project>
